<h1>
  <%= @site.title %>&nbsp;
  <% if @folder %>
  <%= @folder.title %>&nbsp;
  <% end %>
  <%= human_action_name(:page_design, :html_css) %>
</h1>

<% unless flash[:notice].blank? %>
<p id="notice"><%= flash[:notice] %></p>
<% end %>
<% unless flash[:warning].blank? %>
<p id="notice"><%= flash[:warning] %></p>
<% end %>

<script type="text/javascript">


$(document).ready( function()
{
});

</script>

<%= form_for(@page_design, :method => :put) do |f| %>
  <% if @page_design.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= activerecord_error_message(:record_invalid, 
        :errors => @page_design.errors.count) %>
      </h2>
      <ul>
      <% @page_design.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= hidden_field_tag(:back_action, 'html_css') %>
  <fieldset id="page_design_fields">
    <legend><%= PageDesign.human_attribute_name(:html_css) %></legend>
    <div class="field" id="stylesheet" >
      <%= f.label :stylesheet %><br />
      <%= f.text_area :stylesheet, :cols => 80, :rows => 30 %>
    </div>
    <div class="field" id="header_html" >
      <%= f.label :header_html %><br />
      <%= f.text_area :header_html, :cols => 80, :rows => 12 %>
    </div>
    <div class="field" id="footer_html" >
      <%= f.label :footer_html %><br />
      <%= f.text_area :footer_html, :cols => 80, :rows => 12 %>
    </div>
  </fieldset>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

