<h1>
  <%= link_to_folder(@folder) %> 
</h1>

<% unless flash[:notice].blank? %>
<p id="notice"><%= flash[:notice] %></p>
<% end %>
<% unless flash[:warning].blank? %>
<p id="notice"><%= flash[:warning] %></p>
<% end %>

<div id="articles"> 
<% @articles.each do |article| %>
  <article class="article" id="article_<%= article.id %>">
    <h1 class="article_title">
      <%= article.title %>
    </h1>
    <div class="article_informations">
      <span class="updated_at">
      <%= I18n.l(article.updated_at.to_date ,:format => :default) %>
      </span>
    </div>
    <div class="content">
      <%= article.content.html_safe %>
    </div>
  </article>
<% end %>
</div>

<br />

<%= paginate @articles  %>


